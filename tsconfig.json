{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"dom",
			"esnext.asynciterable"
		],
		"rootDir": "./src",
		"outDir": "./dist",
		"target": "esnext",
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"sourceMap": true,
		"strict": true
	},
	"exclude": [
		"node_modules/**/*",
		"dist/**/*",
		"util/**/*"
	]
}